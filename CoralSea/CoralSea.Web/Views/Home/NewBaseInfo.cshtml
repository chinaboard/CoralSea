
@{
    ViewBag.Title = "NewBaseInfo";
}
<h4>完善基本信息<i class="glyphicon glyphicon-edit"></i></h4>
@using (Html.BeginForm("NewBaseInfo", "Home", null, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    <form class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">手机号：</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="phoneNumer" name="phoneNumer" placeholder="手机号">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">微信号：</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="microAccount" name="microAccount" placeholder="微信号">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">RTX：</label>
            <div class="col-sm-10">
                <label style="margin-top: 5px">姓名[工号]</label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">兴趣：</label>
            <div class="col-sm-10">
                <ul style="">
                    <li class="checkbox" style="list-style: none; float: left"><input type="checkbox" name="interest" value="NET"/>.NET</li>
                    <li class="checkbox" style="list-style: none; float: left"><input type="checkbox" name="interest" value="SQL SERVER"/>SQL SERVER</li>
                    <li class="checkbox" style="list-style: none; float: left"><input type="checkbox" name="interest"value="JAVA"/>JAVA</li>
                    <li class="checkbox" style="list-style: none; float: left"><input type="checkbox" name="interest"value="Javascript"/>Javascript</li>
                </ul>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">提交</button>
            </div>
        </div>
    </form>
}
