@using CoralSea.Model.Community
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}
@model TopicModel

<div class="row">
    <div id="topic-master-area" class="col-md-8">
        <div class="topic-area">
            <div class="topic-image-area">
                <img src="@Model.Owner.Image" alt="Alternate Text" />
            </div>
            <div class="topic-area">
                <div class="topic-community"><a href="javascript:void(0)">@Model.Owner.Name >> </a></div>
                <div class="topic-title">@Model.TopicTitle</div>
            </div>
            <div class="topic-content">
                <hr />
                @Model.Content
                <hr />
                <div>
                    <ul class="topic-ul">
                        <li>
                            创建于 @Model.CreateTime.ToShortDateString()
                        </li>
                        <li>
                            最新回复由 @Model.LastReply.ReplyMemberName 在 @Model.LastReply.ReplyTime.ToLongTimeString()
                        </li>
                        <li>
                            查看次数 @Model.ViewCount
                        </li>
                        <li>
                            回复总数 @Model.ReplyCount
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="comments-area">

            @{ int autokey = 0; }
            @foreach (var aComment in Model.ReplyList)
            {

                <div class="a-comment">
                    <table cellpadding="0" cellspacing="0" border="0" width="100%">
                        <tbody>
                            <tr>
                                <td width="48" valign="top" align="center"><img src="@aComment.ReplyMemberImage" class="avatar" border="0"></td>
                                <td width="10" valign="top"></td>
                                <td width="auto" valign="top" align="left">
                                    <div class="fr"> &nbsp; &nbsp; <span class="label label-default">@(++autokey)</span></div>
                                    <div class="sep3"></div>
                                    <strong><a>@aComment.ReplyMemberName</a></strong>&nbsp; &nbsp;<span class="replay-time small">回复于 @aComment.ReplyTime</span>
                                    <div class="sep5"></div>
                                    <div class="reply_content">
                                        @aComment.Content
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            }

